pipeline {
    agent any

    environment {
        // Ensure you add the required environment variables if needed
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'your-credentials-id', url: 'https://github.com/your-username/your-repository.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'pytest --junitxml=report.xml'
            }
        }
        stage('Generate Report') {
            steps {
                junit 'report.xml'
            }
        }
    }
}
